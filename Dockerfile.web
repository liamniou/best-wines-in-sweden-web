# Dockerfile for Best Wines Sweden Static Web Server
# Lightweight - no database dependencies

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies (including those needed for Camoufox/Playwright)
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    libglib2.0-0 \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxcb1 \
    libxkbcommon0 \
    libx11-6 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libatspi2.0-0 \
    libgtk-3-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY app/requirements_web.txt .
RUN pip install --no-cache-dir -r requirements_web.txt

# Download browserforge models (as root, before switching user)
RUN python -c "from browserforge import download_models; download_models()" || true

# Create non-root user first
RUN useradd -m -u 1000 wineapp

# Install Camoufox browser to a shared location accessible by all users
ENV CAMOUFOX_HOME=/opt/camoufox
RUN mkdir -p /opt/camoufox && chmod 755 /opt/camoufox

# Download Camoufox as root, then make it accessible
RUN python -m camoufox fetch --browserforge || echo "Camoufox fetch via CLI failed, trying Python..."
RUN python -c "from camoufox.pkgman import CamoufoxFetcher; f = CamoufoxFetcher(); f.install()" || true

# Copy root's camoufox cache to shared location and wineapp's home
RUN cp -r /root/.cache/camoufox /opt/camoufox/cache 2>/dev/null || true && \
    mkdir -p /home/wineapp/.cache && \
    cp -r /root/.cache/camoufox /home/wineapp/.cache/ 2>/dev/null || true && \
    chown -R wineapp:wineapp /home/wineapp/.cache && \
    chmod -R 755 /opt/camoufox

# Verify Camoufox installation
RUN python -c "import camoufox; print('Camoufox installed successfully')" || true

# Copy application code
COPY app/ .

# Fix permissions
RUN chown -R wineapp:wineapp /app

# Make sure browserforge data is accessible
RUN chmod -R 755 /usr/local/lib/python3.11/site-packages/browserforge/ || true

USER wineapp

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Default command - static server
CMD ["uvicorn", "static_server:app", "--host", "0.0.0.0", "--port", "8000"]
